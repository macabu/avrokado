{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "strict": true,
    "removeComments": true,
    "declaration": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "@types/*"
      ]
    }
  },
  "exclude": [
    "coverage",
    "lib",
    "node_modules",
    "examples",
    "tests"
  ]
}
